{% extends 'base.html.twig' %}

{% block title %}Shop by category{% endblock %}

{% block body %}
<body data-bs-spy="scroll" data-bs-target="#navbar" data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true" tabindex="0">

{# Swipe #}
    <section id="billboard" class="position-relative overflow-hidden bg-light-blue mb-4">
      <div class="swiper main-swiper">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <div class="container">
              <div class="row d-flex align-items-center">
                <div class="col-md-6">
                  <div class="banner-content">
                    <h1 class="display-2 text-uppercase text-dark pb-5">Choose the product you want</h1>
                    {% for category in categories %}
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-medium btn-dark text-uppercase btn-rounded-none">{{category.getName()}}</a>
                    {% endfor %}
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="image-holder">
                    <img src="assets/images/banner-image.png" alt="banner">
                  </div>
                </div>
              </div>
            </div>
          </div>
    </section>
</body>
{% endblock %}
